{
    "variables": {
        "aws_region": "{{env `AWS_REGION`}}",
        "owner_account_id": "{{env `OWNER_ACCOUNT_ID`}}",
        "guest1_account_id": "{{env `GUEST1_ACCOUNT_ID`}}",
        "guest2_account_id": "{{env `GUEST2_ACCOUNT_ID`}}",
        "aws_ami_name": "solodev-single-v{{env `SOLODEV_RELEASE`}}"
    },

    "builders": [{
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
        "profile": "{{ user `aws_profile`}}",
        "instance_type": "t2.small",
        "ssh_username": "ec2-user",
        "ami_name": "{{user `aws_ami_name`}}",
        "ami_description": "Solodev CMS - Single Server Edition",
        "associate_public_ip_address": "true",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "amzn2-ami*-x86_64-ebs",
                "root-device-type": "ebs"
            },
            "owners": [],
            "most_recent": true
        },
        "launch_block_device_mappings": [
            {
                "device_name": "/dev/xvda",
                "volume_size": 50,
                "delete_on_termination": true
            },
            {
                "device_name": "/dev/xvdb",
                "volume_size": 50,
                "delete_on_termination": true
            }
        ],
        "ami_block_device_mappings": [
            {
                "device_name": "/dev/xvda",
                "volume_size": 50,
                "delete_on_termination": true,
                "volume_type": "gp2"
            },
            {
                "device_name": "/dev/xvdb",
                "volume_size": 50,
                "delete_on_termination": true,
                "volume_type": "gp2"
            }
        ]
    }],

    "provisioners": [
        {
            "type": "file",
            "source": "hashicorp/solodev-phpfpm-72/single/scripts",
            "destination": "/tmp"
        },
        {
            "type": "file",
            "source": "/tmp/Solodev",
            "destination": "/tmp/Solodev"
        },
        {
            "type": "file",
            "source": "hashicorp/solodev-phpfpm-72/single/bin/client.env",
            "destination": "/tmp/client.env"
        },
        {
            "type": "file",
            "source": "hashicorp/solodev-phpfpm-72/single/bin/restart.php",
            "destination": "/tmp/restart.php"
        },
        {
            "type": "shell",
            "inline": [
                "ls -al /tmp",
                "ls -al /tmp/Solodev",
                "sudo chmod 700 /tmp/scripts/*",
                "sudo /tmp/scripts/install-base.sh",
                "sudo /tmp/scripts/install-httpd.sh",
                "sudo /tmp/scripts/install-phpfpm.sh",
                "sudo /tmp/scripts/install-node.sh",
                "sudo /tmp/scripts/install-mongo.sh",
                "sudo /tmp/scripts/configure-solodev.sh",
                "sudo /tmp/scripts/install-mysql.sh",
                "sudo /tmp/scripts/configure-single-ami.sh",
                "sudo /tmp/scripts/install-aws.sh"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo rm .ssh/authorized_keys",
                "sudo rm /root/.ssh/authorized_keys",
                "sudo rm -Rf /tmp/*"
            ]
        }
    ]
}